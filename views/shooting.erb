<h3>This is your board:</h3>
<table border="1px"
	<tr>
		<td>*</td>
        	<% [*1..10].each do |num| %>
        		<td><%=num%></td>
        	<%end%>
	</tr>

	<% for letter in [*"A".."J"] do %>
	   <tr>
	   		<td><%=letter%></td>  
			<% @my_board.grid.each do |key, value| %>
				<% if key.to_s =~ /^#{letter}/ %>
					<td><%=value.content.class%></td>
				<%end%>
			<%end%>
		</tr>
    <%end%>  
</table>

<h3>This is your enemy's board:</h3>
<table border="1px"
	<tr>
		<td>*</td>
        	<% [*1..10].each do |num| %>
        		<td><%=num%></td>
        	<%end%>
	</tr>

	<% for letter in [*"A".."J"] do %>
	   <tr>
	   		<td><%=letter%></td>  
			<% @enemy_board.grid.each do |key, value| %>
				<% if key.to_s =~ /^#{letter}/ %>
					<td><%=value.content.class%></td>
				<%end%>
			<%end%>
		</tr>
    <%end%>  
</table>

